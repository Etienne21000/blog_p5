{% extends 'baseBO.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block content %}

    <section class="home">
        {% if param == 'create' %}

            <h1 class="title-h1">{{ title }}</h1>

            <h5>{{ sub }}</h5>

            {% if session.error != '' %}
                <div class="alert alert-danger" role="alert">
                    {{ session.error }}
                </div>
            {% endif %}

            <form action="/addPost" method="POST">
                <div class="form-group">
                    {{ author|raw }}
                </div>
                <div class="form-group">
                    {{ input|raw }}
                    <small class="form-text text-muted">Choisissez bien le titre de votre post !</small>
                </div>

                <div class="form-group">
                    {{ textarea|raw }}
                </div>
                <div class="form-group">
                    {{ status|raw }}
                </div>

                <div class="form-group">
                    {{ submit|raw }}
                </div>
                <div class="form-group">
                    {{ draft|raw }}
                </div>
            </form>

        {% elseif param == 'update' %}

            <h1 class="title-h1">{{ title }}</h1>

            <h5>{{ sub }}</h5>

            {% if session.error != '' %}
                <div class="alert alert-danger" role="alert">
                    {{ session.error }}
                </div>
            {% endif %}

            <p class="title-form-update">
                Cet article est modifi√© par {{ pseudo }}<br>
                Status actuel : {{ status_text }}
            </p>

            <form action="/updatePost/{{ id }}" method="POST">

                <div class="form-group">
                    {{ input|raw }}
                </div>

                <div class="form-group">
                    {{ textarea|raw }}
                </div>

                <div class="form-group">
                    {{ status|raw }}
                </div>

                <div class="form-group">
                    {{ submit|raw }}
                </div>

                <div class="form-group">
                    {{ draft|raw }}
                </div>
            </form>

        {% endif %}
    </section>

{% endblock %}